{
	"name": "nau-tab",
	"version": "4.0.0-alpha.1",
	"license": "Apache-2.0",
	"author": "Thanh Tran <trongthanh@gmail.com> (https://int3ractive.com)",
	"scripts": {
		"build": "rollup -c",
		"dev": "rollup -c -w",
		"eslint": "eslint --ext .js,.svelte .",
		"ffbuild": "web-ext build",
		"fflint": "web-ext lint",
		"ffrun": "web-ext run",
		"ffsign": "web-ext sign",
		"release:major": "npx standard-version -t '' -r major",
		"release:minor": "npx standard-version -t '' -r minor",
		"start": "sirv public",
		"jest": "jest --runInBand --no-cache --config ./jest.config.js",
		"test": "npm run eslint && npm run fflint && npm run jest"
	},
	"engines": {
		"node": ">= 14.0.0",
		"npm": ">= 7.0.0"
	},
	"babel": {
		"env": {
			"test": {
				"plugins": [
					"@babel/plugin-transform-modules-commonjs"
				]
			}
		}
	},
	"devDependencies": {
		"@babel/core": "^7.12.16",
		"@babel/plugin-transform-modules-commonjs": "^7.12.13",
		"@rollup/plugin-commonjs": "^17.0.0",
		"@rollup/plugin-node-resolve": "^11.0.0",
		"babel-eslint": "^10.1.0",
		"babel-jest": "^26.6.3",
		"eslint": "^7.20.0",
		"eslint-config-chotot-base": "^15.1.1",
		"eslint-plugin-import": "^2.19.1",
		"eslint-plugin-svelte3": "^3.0.0",
		"jest": "^26.6.3",
		"jest-localstorage-mock": "^2.4.6",
		"jest-transform-svelte": "^2.1.0",
		"prettier": "^2.2.1",
		"prettier-plugin-svelte": "^2.1.4",
		"rollup": "^2.39.0",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-css-only": "^3.1.0",
		"rollup-plugin-livereload": "^2.0.0",
		"rollup-plugin-svelte": "^7.1.0",
		"rollup-plugin-terser": "^7.0.2",
		"sirv-cli": "^1.0.11",
		"stylelint": "^13.10.0",
		"stylelint-config-standard": "^20.0.0",
		"svelte": "^3.32.3",
		"web-ext": "^7.4.0"
	},
	"dependencies": {
		"lockr": "^0.8.4"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 11"
	],
	"webExt": {
		"sourceDir": "public/",
		"run": {
			"firefox": "firefoxdeveloperedition"
		}
	},
	"standard-version": {
		"skip": {
			"tag": true
		}
	}
}
